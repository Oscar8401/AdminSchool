@model IPagedList<SchoolTeacher>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <p>
        <button class="btn btn-default">@Html.ActionLink("Create New", "Create")</button>
    </p>
    <p>
        @using (Html.BeginForm("Index", "Schoolteacher",FormMethod.Get)) { 
        <b>Search by:</b>@Html.RadioButton("Search By", "Age",true) <text> Age</text>
                         @Html.RadioButton("Search By", "Salary") <text> Salary</text>
                         @Html.RadioButton("Search By", "FirstName") <text> FirstName </text>
                        @Html.RadioButton("Search By", "LastName") <text> LastName</text>
                        @Html.RadioButton("Search By", "Position") <text> Position</text><br />
        @Html.TextBox("Search")<input type="submit" value="Search"/>
        }
    </p>
</div>

<table class="table table-hover table-striped table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Position)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="6">No rows match search critiria</td>
        </tr>
    }
    else
    { 
    foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            <button class="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
            <button class="btn btn-default">@Html.ActionLink("Details", "Details", new { id = item.Id })</button>
            <button class="btn btn-default">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button> 
        </td>
    </tr>
}
    }
</table>
<div class="row">
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page}))
</div>
